{% extends 'admin/base.html.twig' %}

{% block content %}
    {{ include('flashes.html.twig') }}

    {% form_theme form with ['form.html.twig', 'form_inline.html.twig'] %}
    {{ form(form) }}

    <div class="overflow-x-auto mt-6">
        <div class="text-gray-500 mb-2">
            Ukupno rezultata: <span class="font-bold">{{ donors.total }}</span>
        </div>

        <table class="table rounded-xl border border-base-200">
            <thead class="bg-gray-100">
                <tr>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_donor_list', 'sort': 'id', 'default_direction': 'desc', 'title': 'ID' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_donor_list', 'sort': 'fullName', 'title': 'Ime', 'title_icon': 'ti-user' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_donor_list', 'sort': 'isMonthly', 'title': 'Mesečna podrška', 'title_icon': 'ti-repeat' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_donor_list', 'sort': 'amount', 'title': 'Iznos', 'title_icon': 'ti-cash' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_donor_list', 'sort': 'updatedAt', 'title': 'Datum', 'title_icon': 'ti-calendar-event' }
                        ) }}
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for donor in donors.items %}
                <tr class="hover:bg-gray-100">
                    <td>{{ donor.id }}</td>
                    <td>
                        <div>{{ donor.user.fullName }}</div>
                        <a href="{{ path('admin_user_edit', { 'id': donor.user.id }) }}" class="link link-primary link-hover">
                            {{ donor.user.email }}
                        </a>
                    </td>
                    <td>
                        {% if donor.isMonthly %}
                            <div class="status status-success mb-1"></div>
                            Da
                        {% else %}
                            <div class="status status-error mb-1"></div>
                            Ne
                        {% endif %}
                    </td>
                    <td>{{ donor.amount|number_format }}</td>
                    <td>{{ donor.updatedAt|date('d.m.Y.') }}</td>
                    <td>
                        <div class="flex gap-2 justify-end">
                            <a href="{{ path('admin_donor_delete', { 'id': donor.id }) }}" class="btn btn-error btn-sm flex tooltip" data-tip="Obriši">
                                <span class="ti ti-trash text-xl"></span>
                            </a>

                            <a href="{{ path('admin_donor_edit', { 'id': donor.id }) }}" class="btn btn-primary btn-sm flex tooltip" data-tip="Izmeni">
                                <span class="ti ti-edit text-xl"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% import "macro.html.twig" as macro %}
    {{ macro.pagination('admin_donor_list', donors.total_pages, donors.current_page) }}
{% endblock %}
