{% extends 'admin/base.html.twig' %}

{% block content %}
    {{ include('flashes.html.twig') }}

    {% form_theme form with ['form.html.twig', 'form_inline.html.twig'] %}
    {{ form(form) }}

    <div class="overflow-x-auto mt-6">
        <div class="text-gray-500 mb-2">
            Ukupno rezultata: <span class="font-bold">{{ transactions.total }}</span>
        </div>

        <table class="table rounded-xl border border-base-200">
            <thead class="bg-gray-100">
                <tr>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'id', 'default_direction': 'desc', 'title': 'ID' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'period', 'title': 'Period', 'title_icon': 'ti-calendar-event' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'donor', 'title': 'Donator', 'title_icon': 'ti-user-heart' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'damagedEducator', 'title': 'Oštećeni/a', 'title_icon': 'ti-school' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'accountNumber', 'title': 'Broj računa', 'title_icon': 'ti-credit-card' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'amount', 'title': 'Cifra', 'title_icon': 'ti-cash' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'createdAt', 'title': 'Kreirano', 'title_icon': 'ti-calendar-event' }
                        ) }}
                    </th>
                    <th>
                        {{ include(
                            'sort.html.twig',
                            { 'path': 'admin_transaction_list', 'sort': 'status', 'title': 'Status' }
                        ) }}
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for transaction in transactions.items %}
                <tr class="hover:bg-gray-100">
                    <td>{{ transaction.id }}</td>
                    <td>{{ transaction.damagedEducator.period|format_period(1) }}</td>
                    <td>
                        <div>{{ transaction.user.fullName }}</div>
                        <a href="{{ path('admin_user_edit', { 'id': transaction.user.id }) }}" class="link link-primary link-hover">
                            {{ transaction.user.email }}
                        </a>
                    </td>
                    <td>
                        <div>{{ transaction.damagedEducator.name }}</div>
                        <div class="text-gray-500">
                            {{ transaction.damagedEducator.school.name }} ({{ transaction.damagedEducator.school.city.name }})
                        </div>
                    </td>
                    <td class="whitespace-nowrap">{{ transaction.accountNumber|account_number_format }}</td>
                    <td>{{ transaction.amount|number_format }}</td>
                    <td class="whitespace-nowrap">{{ transaction.createdAt|date('H:i d.m.Y.') }}</td>
                    <td class="whitespace-nowrap">{{ transaction.status|transaction_status|raw }}</td>
                    <td>
                        <div class="flex gap-2 justify-end">
                            <a href="{{ path('admin_transaction_edit', { 'id': transaction.id }) }}" class="btn btn-primary btn-sm flex tooltip" data-tip="Izmeni">
                                <span class="ti ti-edit text-xl"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% import "macro.html.twig" as macro %}
    {{ macro.pagination('admin_transaction_list', transactions.total_pages, transactions.current_page) }}
{% endblock %}
