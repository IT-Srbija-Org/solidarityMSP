{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="overflow-x-auto mt-6">
        <div class="text-gray-500 mb-2">
            Ukupno rezultata: <span class="font-bold">{{ items|length }}</span>
        </div>

        <table class="table rounded-box border border-base-200">
            <thead>
                <tr class="bg-base-200 text-base-content">
                    <th>ID</th>
                    <th>Naziv</th>
                    <th>
                        <span class="ti ti-calendar-event text-xl"></span>
                        Kreiran
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr class="hover:bg-base-200">
                    <th>{{ item.id }}</th>
                    <td>{{ item.name }}</td>
                    <td>{{ item.createdAt|date('d.m.Y.') }}</td>
                    <td>
                        <div class="flex gap-2 justify-end">
                            <a href="{{ path('admin_school_type_edit', { 'id': item.id }) }}" class="btn btn-primary btn-sm flex tooltip" data-tip="Izmeni">
                                <span class="ti ti-edit text-xl"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}