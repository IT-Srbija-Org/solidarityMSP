{% extends 'admin/base.html.twig' %}

{% block content %}
    {{ include('flashes.html.twig') }}

    {% form_theme form with ['form.html.twig', 'form_inline.html.twig'] %}
    {{ form(form) }}

    <div class="overflow-x-auto mt-6">
        <div class="flex justify-between items-center mb-4">
            <div class="text-gray-500">
                Ukupno rezultata: <span class="font-bold">{{ schools.total }}</span>
            </div>

            <a href="{{ path('admin_school_new') }}" class="btn btn-primary">
                <span class="ti ti-plus text-xl"></span>
                Dodaj
            </a>
        </div>

        <table class="table rounded-xl border border-base-200">
            {% set current_sort = app.request.get('sort', 'id') %}
            {% set current_direction = app.request.get('direction', 'asc') %}
            {% set reverse_direction = current_direction == 'asc' ? 'desc' : 'asc' %}
            <thead class="bg-gray-100">
                <tr>
                    <th>ID</th>
                    <th>
                        <a href="{{ path('admin_school_list', { sort: 'name', direction: current_sort == 'name' ? reverse_direction : 'asc' }) }}">
                            Naziv {{ include('sort.html.twig', { 'sort': 'name', 'current_sort': current_sort, 'current_direction': current_direction }) }}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('admin_school_list', { sort: 'cityName', direction: current_sort == 'cityName' ? reverse_direction : 'asc' }) }}">
                            <span class="ti ti-building-community text-xl"></span>
                            Grad {{ include('sort.html.twig', { 'sort': 'cityName', 'current_sort': current_sort, 'current_direction': current_direction }) }}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('admin_school_list', { sort: 'typeName', direction: current_sort == 'typeName' ? reverse_direction : 'asc' }) }}">
                            <span class="ti ti-building-cog text-xl"></span>
                            Tip Å¡kole {{ include('sort.html.twig', { 'sort': 'typeName', 'current_sort': current_sort, 'current_direction': current_direction }) }}
                        </a>
                    </th>
                    <th>
                        <span class="ti ti-calendar-event text-xl"></span>
                        Kreirana
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for school in schools.items %}
                <tr class="hover:bg-gray-100">
                    <td>{{ school.id }}</td>
                    <td>{{ school.name }}</td>
                    <td>{{ school.city.name }}</td>
                    <td>{{ school.type.name }}</td>
                    <td>{{ school.createdAt|date('d.m.Y.') }}</td>
                    <td>
                        <div class="flex gap-2 justify-end">
                            <a href="{{ path('admin_school_edit', { 'id': school.id }) }}" class="btn btn-primary btn-sm flex tooltip" data-tip="Izmeni">
                                <span class="ti ti-edit text-xl"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% import "macro.html.twig" as macro %}
    {{ macro.pagination('admin_school_list', schools.total_pages, schools.current_page) }}
{% endblock %}
