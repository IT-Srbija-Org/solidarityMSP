{% extends 'base.html.twig' %}

{% block body %}
    {% import "macro.twig" as macro %}
    {{ macro.back('delegate_damaged_educators', { 'period': damagedEducator.period.id }) }}

    <div class="card card-lg bg-base-100 shadow m-10 mt-0">
        <div class="card-body">
            <h2 class="card-title mb-4">
                <span class="ti ti-trash text-3xl"></span>
                Oštećeni/a za {{ damagedEducator.period.date|date('F')|trans }},

                {% if damagedEducator.period.firstHalf %}
                    prva polovina meseca (1/2),
                {% else %}
                    druga polovina meseca (2/2),
                {% endif %}

                {{ damagedEducator.period.year }}
            </h2>

            <div>
                {% form_theme form 'form.html.twig' %}
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
