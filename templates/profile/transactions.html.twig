{% extends 'base.html.twig' %}

{% block body %}
    {% import "macro.html.twig" as macro %}
    {{ macro.back('home') }}

    <div class="card card-lg bg-base-100 shadow m-10 mt-0">
        <div class="card-body">
            <h2 class="card-title mb-4">
                <span class="ti ti-credit-card-pay text-2xl"></span>
                Instrukcije za uplatu
            </h2>

            <div class="text-gray-500 mb-4">
                Na stranici možete da vidite spisak svih vaših instrukcija za uplatu ka oštećenim prosvetnim radnicima. Takođe možete da dodate potvrdu o plaćanju za svaku upplatu.
            </div>

            {% if transactions.total == 0 %}
                <div class="alert alert-info alert-soft">
                    <span class="ti ti-info-circle text-2xl"></span>
                    <span>Trenutno nema nijedne instrukcije za uplatu, kada sistem bude kreirao nove instrukcije bićete obavešteni na email.</span>
                </div>
            {% else %}
                {{ include('flashes.html.twig') }}

                {% if hasCancelledTransactions %}
                    <div class="alert alert-info alert-soft">
                        Neke od vaših instrukcija za uplatu su otkazane. Do otkazivanja može doći ako je administrator poništio instrukciju ili je prošlo više od 72 sata bez prilaganja potvrde o uplati. Biće vam prosleđena nova instrukcija za uplatu uskoro.
                    </div>
                {% endif %}

                <div class="overflow-x-auto mt-4">
                    <div class="text-gray-500 mb-2 total-results">
                        Ukupno rezultata: <span class="font-bold">{{ transactions.total }}</span>
                    </div>

                    <table class="table rounded-xl border border-base-200">
                        <thead class="bg-gray-100">
                            <tr>
                                <th>ID</th>
                                <th>
                                    <span class="ti ti-school text-xl"></span>
                                    Oštećeni/a
                                </th>
                                <th>
                                    <span class="ti ti-building text-xl"></span>
                                    Škola
                                </th>
                                <th>
                                    <span class="ti ti-credit-card text-xl"></span>
                                    Broj računa
                                </th>
                                <th>
                                    <span class="ti ti-cash text-xl"></span>
                                    Cifra
                                </th>
                                <th>
                                    <span class="ti ti-calendar-event text-xl"></span>
                                    Kreirano
                                </th>
                                <th>
                                    <span class="ti ti-file text-xl"></span>
                                    Potvrda o uplati
                                </th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for transaction in transactions.items %}
                            <tr class="hover:bg-gray-100">
                                <td>{{ transaction.id }}</td>
                                <td>
                                    {% if transaction.isStatusCancelled %}
                                        <span class="text-gray-500 tracking-widest">{{ transaction.damagedEducator.name|mask }}</span>
                                    {% else %}
                                        {{ transaction.damagedEducator.name }}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if transaction.isStatusCancelled %}
                                        <div class="text-gray-500 tracking-widest">{{ transaction.damagedEducator.school.name|mask }}</div>
                                        <div class="text-gray-500 tracking-widest">{{ transaction.damagedEducator.school.city.name|mask }}</div>
                                    {% else %}
                                        <div>{{ transaction.damagedEducator.school.name }}</div>
                                        <div class="text-gray-500">{{ transaction.damagedEducator.school.city.name }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if transaction.isStatusCancelled %}
                                        <span class="text-gray-500 tracking-widest">{{ transaction.accountNumber|mask }}</span>
                                    {% else %}
                                        {{ transaction.accountNumber }}
                                    {% endif %}
                                </td>
                                <td>{{ transaction.amount|number_format }}</td>
                                <td>{{ transaction.createdAt|date('d.m.Y.') }}</td>
                                <td>
                                    {% if transaction.hasPaymentProofFile %}
                                        <a href="{{ path('profile_transaction_payment_proof_download', { 'id': transaction.id }) }}" class="link link-primary no-underline">
                                            <span class="ti ti-download text-xl"></span>
                                            Preuzmi
                                        </a>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="whitespace-nowrap">
                                    {{ transaction.status|transactionStatus|raw }}</td>
                                <td>
                                    <div class="flex gap-2 justify-end">
                                        {% if transaction.hasPaymentProofFile %}
                                            <a href="{{ path('profile_transaction_payment_proof_delete', { 'id': transaction.id }) }}" class="btn {% if transaction.allowDeletePaymentProof %}btn-error{% else %}btn-disabled{% endif %} btn-sm flex tooltip" data-tip="Obriši potvrdu o uplate">
                                                <span class="ti ti-file-x text-xl"></span>
                                            </a>
                                        {% else %}
                                            <a href="{{ path('profile_transaction_payment_proof_upload', { 'id': transaction.id }) }}" class="btn {% if transaction.allowUpdatePaymentProof %}btn-primary{% else %}btn-disabled{% endif %} btn-sm flex tooltip" data-tip="Priloži potvrdu o uplate">
                                                <span class="ti ti-file-plus text-xl"></span>
                                            </a>
                                        {% endif %}

                                        <a href="{{ path('profile_transaction_invoice_print', { 'id': transaction.id }) }}" target="_blank" class="btn {% if transaction.allowShowPrint %}btn-primary{% else %}btn-disabled{% endif %} btn-sm flex tooltip" data-tip="Oštampaj">
                                            <span class="ti ti-printer text-xl"></span>
                                        </a>

                                        <a href="#" class="btn {% if transaction.allowShowQR %}btn-primary{% else %}btn-disabled{% endif %} btn-sm flex tooltip" data-tip="NBS QR" onclick="openQrModal('{{ transaction.id }}'); return false;">
                                            <span class="ti ti-qrcode text-xl"></span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% import "macro.html.twig" as macro %}
                {{ macro.pagination('admin_transaction_list', transactions.total_pages, transactions.current_page) }}
            {% endif %}
        </div>
    </div>

    <dialog id="qr_modal" class="modal">
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>

        <div class="modal-box" id="qr_modal_box">
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
            </form>

            <div id="qr_modal_content"></div>
        </div>
    </dialog>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function openQrModal(transactionId) {
            const modal = document.getElementById('qr_modal');
            const contentDiv = document.getElementById('qr_modal_content');
            contentDiv.innerHTML = '<div class="text-center my-4">Učitavanje...</div>';

            fetch('/profil/qr-kod/' + transactionId)
                .then(response => response.text())
                .then(html => {
                    contentDiv.innerHTML = html;
                })
                .catch(() => {
                    contentDiv.innerHTML = '<div class="text-error">Greška pri učitavanju QR koda.</div>';
                });

            modal.showModal();
        }
    </script>
{% endblock %}
